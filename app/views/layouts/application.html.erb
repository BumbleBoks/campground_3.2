<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title).empty? ? "Campground" : yield(:title) %></title>	
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render partial: 'layouts/individual_pane' %>

<%= render partial: 'layouts/community_pane' %>
<div id="user_dynamic">
	<%= render partial: 'layouts/header' %>
	<div id="user_display">
		<% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "flash_#{key}") %>
		<% end %>
		<%= yield %>		
	</div>
	<%= render partial: 'layouts/footer' %>
</div>

</body>
</html>
